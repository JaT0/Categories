@model CarouselItem
@using Tatyrkova.Eshop.Web.Areas.Admin.Controllers

@{ 
    if(String.IsNullOrWhiteSpace(ViewBag.Action) == false)
            {
                <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @{
                        if (ViewBag.Action == nameof(CarouselController.Edit))
                        {
                            <input type="hidden" asp-for="ID" class="form-control" />
                        }
                     }
                    <div class="form-group">
                        <label asp-for="Image">Image Source</label>
                        <input id="fileUpload" asp-for="Image" class="form-control-file" accept="image/*" placeholder="Enter image file">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageAlt">ImageAlt</label>
                        <input asp-for="ImageAlt" class="form-control" placeholder="Enter Image Alt">
                        <span asp-validation-for="ImageAlt" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                
            }
}

@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/validation/FileContentTypeValidation.js"></script>
}