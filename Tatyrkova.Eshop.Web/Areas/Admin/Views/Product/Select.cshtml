@model IndexViewModel
@{
    ViewData["Title"] = "Select Product";
}
<h1>@ViewData["Title"]</h1>

<p>All Products</p>

<a asp-action="Create">Create Product Item</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Image Source</th>
            <th scope="col">Product Price</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Products.Count; ++i)
            {
                <tr>
                    <th scope="row">@Model.Products[i].ID</th>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].ImageSource</td>
                    <td>@Model.Products[i].Price</td>
                    <td><a asp-action="Edit" asp-route-ID="@Model.Products[i].ID">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-ID="@Model.Products[i].ID" onclick="return ConfirmDelete();">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/js/alerts.js"></script>
}
