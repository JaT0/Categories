@using Tatyrkova.Eshop.Web.Areas.Admin.Controllers
@model Product

<form asp-action="@ViewBag.Action" method="post">
    @{
        if (ViewBag.Action != null &&
            ViewBag.Action == nameof(ProductController.Edit))
        {
            <input asp-for="ID" type="hidden" class="form-control">
        }
    }
    <div class="form-group">
        <label asp-for="Name">Product Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter Product Name">
    </div>
    <div class="form-group">
        <label asp-for="ImageSource">Image Source</label>
        <input asp-for="ImageSource" type="text" class="form-control" placeholder="Enter Image Source">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="text" class="form-control" placeholder="Enter Product Price">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>