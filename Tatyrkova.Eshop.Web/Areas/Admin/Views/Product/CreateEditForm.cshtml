@model Product
@using Tatyrkova.Eshop.Web.Areas.Admin.Controllers

@{
    if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
    <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
        @{
            if (ViewBag.Action == nameof(ProductController.Edit))
            {
                <input type="hidden" asp-for="ID" class="form-control" />
            }
        }
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control" placeholder="Enter product description">
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="Enter product price">
        </div>
        <div class="form-group">
            <label asp-for="Image">Image Source</label>
            <input asp-for="Image" class="form-control-file" accept="image/*" placeholder="Enter image file">
        </div>
        <div class="form-group">
            <label asp-for="ImageAlt">ImageAlt</label>
            <input asp-for="ImageAlt" class="form-control" placeholder="Enter Image Alt">
        </div>
        <div class="form-group">
            <label asp-for="Category">Category</label>
            <input asp-for="Category" class="form-control" placeholder="Enter Product Category">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    }
}